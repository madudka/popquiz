<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/dialogBg"
    android:background="@drawable/preview_background"
    android:layout_gravity="center"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/btnClose"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/dialog_close"
            android:textSize="24sp"
            android:textColor="@color/black95"
            android:textStyle="bold"
            android:textAppearance="@style/ButtonTextAppearance"
            app:cornerRadius="25dp"
            app:strokeWidth="3dp"
            app:strokeColor="@color/black95"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/textTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/platinum"
            android:fontFamily="@font/troubleside"
            android:text="@string/lvl1_theme"/>

        <ImageView
            android:id="@+id/prevImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/preview_image_one"
            android:layout_marginBottom="10dp"
            android:layout_weight="60"/>

        <TextView
            android:id="@+id/textDescr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lvl_1_6_start"
            android:textColor="@color/platinum"
            android:textSize="22sp"
            android:fontFamily="@font/troubleside"
            android:layout_marginBottom="10dp"
            android:layout_weight="30"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/btnContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_continue"
            android:textSize="20sp"
            android:textColor="@color/black95"
            android:textAppearance="@style/ButtonTextAppearance"
            app:cornerRadius="25dp"
            app:strokeWidth="5dp"
            app:strokeColor="@color/black95"
            android:layout_gravity="center"/>

    </LinearLayout>


</LinearLayout>