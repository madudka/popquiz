<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/dialogBg"
    android:background="@drawable/preview_background"
    android:layout_gravity="center"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/btnClose"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/dialog_close"
            android:textSize="20sp"
            android:textColor="@color/black95"
            android:textAppearance="@style/ButtonTextAppearance"
            app:cornerRadius="25dp"
            app:strokeWidth="3dp"
            app:strokeColor="@color/black95"
            android:layout_gravity="start"/>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textDescrEnd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/lvl_one_end"
                android:textColor="@color/platinum"
                android:textSize="20sp"
                android:fontFamily="@font/troubleside"/>
        </ScrollView>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/btnContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/dialog_continue"
            android:textSize="20sp"
            android:textColor="@color/black95"
            android:textAppearance="@style/ButtonTextAppearance"
            app:cornerRadius="25dp"
            app:strokeWidth="5dp"
            app:strokeColor="@color/black95"
            android:layout_gravity="center"/>

    </LinearLayout>


</LinearLayout>